<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
 PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.xiaoyue.ssm.mapper.UserMapper">
	<resultMap type="com.xiaoyue.ssm.pojo.User" id="userResultMap">
		<id column="id" property="id"/>
		<result column="name" property="name"/>
		<result column="password" property="password"/>
	</resultMap>
	
	<sql id="studentSql" >
		 (tbl_username,tbl_password )
	</sql>
	<select id="selectUser" parameterType="hashMap" resultType="com.xiaoyue.ssm.pojo.User">
		select * from user where username=#{user.name} and password=#{user.password} 
	</select>
	
	<select id="checkUserName" parameterType="Object" resultType="com.xiaoyue.ssm.pojo.User">
		select * from user where username=#{name}
	</select>
	

</mapper>